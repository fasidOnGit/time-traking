{
  "name": "time-tracker",
  "version": "0.1.0",
  "productName": "Timer Tracker",
  "author": "Kader Mohideen Fasid",
  "description": "A Time Tracker App that tracks your work time.",
  "main": "build/electron.js",
  "private": true,
  "homepage": "./",
  "dependencies": {
    "moment": "^2.21.0",
    "moment-timezone": "^0.5.14",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.7",
    "react-scripts": "1.1.1",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0"
  },
  "scripts": {
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "react-start": "react-scripts start",
    "start": "concurrently \"npm run react-start\" \"wait-on http://localhost:3000/ && npm run electron\"",
    "pack": "build --dir",
    "electron-pack": "build -w --em.main=build/electron.js",
    "preelectron-pack": "npm run build",
    "release": "electron-builder",
    "dist": "npm run build && build",
    "postinstall": "install-app-deps"
  },
  "build": {
    "appId": "com.example.electron-cra",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories":{
      "buildResources": "assets",
      "output":"./dist"
    },
    "win" : {
      "target": "nsis",
      "icon" : "assets/build.ico",
      "publisherName": "Fasid"
  }
  },
  "devDependencies": {
    "concurrently": "^3.5.1",
    "electron": "^1.8.4",
    "electron-builder": "^20.5.1",
    "redux-immutable-state-invariant": "^2.1.0",
    "redux-mock-store": "^1.5.1",
    "wait-on": "^2.1.0"
  }
}
